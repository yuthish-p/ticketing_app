# Logs
logs/
*.log
npm-debug.log*
yarn-debug.log*
pnpm-debug.log*

# Dependency directories
node_modules/
frontend/node_modules/
backend/node_modules/

# Build output
frontend/dist/
backend/dist/
dist/
build/

# Environment files
.env
.env.*.local
frontend/.env
